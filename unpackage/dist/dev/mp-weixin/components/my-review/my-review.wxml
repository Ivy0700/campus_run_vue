<view class="review-card"><view class="first-line"><view data-event-opts="{{[['tap',[['goToChat',['$0'],['info.openid']]]]]}}" class="info" catchtap="__e"><image class="avatar" src="{{info.userDTO.headPortrait}}"></image><text class="nickname">{{info.userDTO.username}}</text></view><text class="time">{{getTime}}</text></view><view data-event-opts="{{[['tap',[['goToPost',['$event']]]]]}}" class="second-line" bindtap="__e"><text class="detail">{{"【"+info.orderTitle+"】"+info.orderContent}}</text></view><view class="third-line"><text class="review">{{info.content}}</text></view></view>