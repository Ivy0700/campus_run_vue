<view class="review-card"><view class="first-line"><view data-event-opts="{{[['tap',[['goToChat',['$0'],['info.openid']]]]]}}" class="info" catchtap="__e"><image class="avatar" src="{{info.avatar}}"></image><text class="nickname">{{info.nickname}}</text></view><text class="time">{{info.postTime}}</text></view><view data-event-opts="{{[['tap',[['goToPost',['$event']]]]]}}" class="second-line" bindtap="__e"><text class="detail">{{"【"+info.title+"】"+info.content}}</text></view><view class="third-line"><text class="review">{{info.review}}</text></view></view>