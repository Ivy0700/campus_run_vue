<view><view class="errand-status"><text class="status">{{info.status}}</text><image class="chevron" src="/static/post_icon/chevron-right.png"></image></view><view class="title-section"><text class="title">{{info.title}}</text></view><view class="middle-section"><view class="row1"><text class="row1-left">预期费用</text><view class="row1-right"><image class="image-money" src="../../static/post_icon/money.png"></image><text class="money">{{info.cost}}</text></view></view><view class="row2"><text class="row2-left">起点</text><text class="row2-right">{{info.startingPoint}}</text></view><view class="row3"><text class="row3-left">终点</text><text class="row3-right">{{info.destination}}</text></view></view><view class="bottom-section"><text class="content">{{info.content}}</text></view><view class="bottom-button"><button data-event-opts="{{[['tap',[['clickBtn',['$event']]]]]}}" class="button-left" bindtap="__e">{{buttonChoice}}</button><block wx:if="{{info.status!=='已完成'&&info.status!=='已取消'}}"><button data-event-opts="{{[['tap',[['cancelOrder',['$event']]]]]}}" class="button-right" bindtap="__e">取消</button></block></view></view>