/* 水平间距 */
.top-section {
  padding-bottom: 100rpx;
}
.top-section .address-card {
  background-color: white;
  border-radius: 12px;
  margin-top: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  box-shadow: 0 1px 3px darkgray;
}
.top-section .address-card .close {
  font-size: 35px;
  font-weight: 400;
  left: 90%;
  align-items: center;
  position: relative;
  color: dimgray;
}
.top-section .address-card .address-info {
  align-items: center;
  display: flex;
  justify-content: space-between;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.top-section .address-card .address-info .startingPoint {
  text-align: center;
  width: 40%;
  white-space: pre-line;
  font-size: 14px;
}
.top-section .address-card .address-info .arrow {
  width: 15%;
  font-size: 30px;
  text-align: center;
}
.top-section .address-card .address-info .destination {
  width: 40%;
  text-align: center;
  white-space: pre-line;
  font-size: 14px;
}
.top-section .address-card .user-info {
  display: flex;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2px solid #efefef;
  padding-top: 15rpx;
  align-items: center;
}
.top-section .address-card .user-info .receiver {
  font-weight: 600;
  font-size: 16px;
}
.top-section .address-card .user-info .phoneNum {
  padding-left: 20rpx;
  font-size: 13px;
  color: dimgray;
  font-weight: 530;
}
.top-section .address-card .bottom-section {
  padding-left: 20rpx;
  padding-top: 20rpx;
  font-size: 14px;
  align-items: center;
  display: flex;
  padding-bottom: 15rpx;
}
.top-section .address-card .bottom-section .bottom-text {
  padding-left: 20rpx;
}
.top-section .address-card .bottom-section .update-btn {
  font-size: 14px;
  font-weight: 560;
  background-color: white;
  color: #5500ff;
  width: 130rpx;
  height: 60rpx;
  border-radius: 20px;
  text-align: center;
  position: relative;
  left: 10%;
  line-height: 50rpx;
  vertical-align: middle;
  border: 2px solid #5500ff;
}
.add-section {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 70rpx;
  background-color: white;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  border-top: #efefef 1px solid;
  justify-content: center;
}
.add-section .add-btn {
  font-size: 15px;
  font-weight: 580;
  background-color: blue;
  color: #FFF;
  width: 500rpx;
  height: 75rpx;
  border-radius: 20px;
  text-align: center;
  vertical-align: middle;
}

