.userinfo {
  height: 350rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.userinfo .avatar {
  width: 90px;
  height: 90px;
  border-radius: 45px;
  border: 2px solid #FFF;
  box-shadow: 0 1px 5px black;
}
.userinfo .nickname {
  font-size: 16px;
  color: black;
  font-weight: bold;
  margin-top: 10px;
}
.middle-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 70rpx;
  background-color: white;
  border-radius: 10px;
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.middle-card .first {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.middle-card .first .first-image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 45px;
}
.middle-card .first .first-text {
  padding-top: 5rpx;
  font-size: 12px;
}
.middle-card .second {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.middle-card .second .second-image {
  width: 55rpx;
  height: 55rpx;
  border-radius: 45px;
}
.middle-card .second .second-text {
  padding-top: 10rpx;
  font-size: 12px;
}
.middle-card .third {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.middle-card .third .third-image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 45px;
}
.middle-card .third .third-text {
  padding-top: 5rpx;
  font-size: 12px;
}
.middle-card .fourth {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.middle-card .fourth .fourth-image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 45px;
}
.middle-card .fourth .fourth-text {
  padding-top: 5rpx;
  font-size: 12px;
}
.choice {
  margin-top: 30rpx;
  background-color: white;
  border-radius: 10px;
  border-bottom: 1px solid #efefef;
  box-shadow: 0 0 5px black;
  align-items: center;
  margin-left: 10rpx;
  margin-right: 10rpx;
  display: flex;
  justify-content: space-around;
  padding-top: 13rpx;
  padding-bottom: 13rpx;
}
.choice .left-section {
  align-items: center;
}
.choice .left-section .left {
  font-size: 14px;
  font-weight: 550;
}
.choice .left-section .left-num {
  padding-left: 5rpx;
  font-size: 14px;
  font-weight: 550;
}
.choice .right-section {
  align-items: center;
}
.choice .right-section .right {
  font-size: 14px;
  font-weight: 550;
}
.choice .right-section .right-num {
  padding-left: 5rpx;
  font-size: 14px;
  font-weight: 550;
}
.empty-section {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.empty-section .empty-img {
  padding-top: 50rpx;
  height: 180rpx;
  width: 180rpx;
}
.empty-section .empty-text {
  font-size: 13px;
  padding-top: 17rpx;
  color: #828282;
}

